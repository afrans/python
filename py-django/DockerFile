# Imagem base com Python 3.14
FROM python:3.14-slim

# Evita que o Python gere .pyc e usa saída sem buffer (útil em logs)
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Cria e define diretório de trabalho no container
WORKDIR /code

# Instala dependências do sistema (por ex. para compilar libs, usar psycopg2 etc)
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copia o arquivo de dependências
COPY requirements.txt /code/

# Instala as dependências Python
RUN pip install --no-cache-dir -r requirements.txt

# Copia o restante do código do projeto para dentro do container
COPY . /code/

# Expõe a porta 8000 (padrão do runserver)
EXPOSE 8000

# Comando padrão: rodar o servidor de desenvolvimento do Django
CMD ["sh", "-c", "python manage.py migrate && python manage.py runserver 0.0.0.0:8000"]
